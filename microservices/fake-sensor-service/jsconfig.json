{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
        "@app/*": ["src/*"],
        "@config/*": ["src/config/*"],
        "@controllers/*": ["src/controllers/*"],
        "@models/*": ["src/models/*"],
        "@services/*": ["src/services/*"],
        "@loaders/*": ["src/loaders/*"],
        "@routes/*": ["src/routes/*"],
        "@utils/*": ["src/utils/*"],
      "@middlewares/*": ["src/middlewares/*"]
    }
  },
  "exclude": ["node_modules"]
}
